{
  "compilerOptions": {
    "baseUrl": ".",
    "incremental": true,
    "jsx": "preserve",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@comp/*": ["./components/*"],
      "@views/*": ["./views/*"],
      "@api/*": ["./api/*"],
      "@constants/*": ["./constants/*"],
      "@layouts/*": ["./layouts"],
      "@hooks/*": ["./hooks"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "scripts/next/index.js"],
  "exclude": ["node_modules", ".next"]
}
